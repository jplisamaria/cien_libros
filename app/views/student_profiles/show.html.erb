<% binding.pry %>
<p>
  <%= link_to t( ".update_student_info"),
    edit_parent_profile_student_profile_path %>
</p>

<p>
  <%= link_to t( ".delete_student_info"), 
    @student,
    method: :delete, 
    data: { confirm: I18n.t( ".child_deletion_confirmation")}
  %>
</p>

<p>
  <%= @student.first_name %> 
  <%= t ".has_read" %>
  <%= @student.readings.count %>
  <%= t ".books" %>
</p>

<% if @student.readings.any? %>
  <h3>
    <%= t ".reading_log_prefix" %>
    <%= @student.first_name %>
    <%= t ".reading_log_suffix" %>
  </h3>
  <%= render 'readings/table' %>
<% end %>
