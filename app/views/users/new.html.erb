<%= form_for @user do |form| %>
  <div>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </div>
  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <p>I am a:</p>
    <p><%= form.radio_button :profile, 'StudentProfile' %> Student</p>
    <p><%= form.radio_button :profile, 'ParentProfile' %> Parent</p>
  </div>
  <div>
    <%= form.submit "Sign up" %>
  </div>
<% end %>

